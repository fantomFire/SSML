<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="101dp"
                android:background="@mipmap/logo_bgs"
                android:orientation="vertical"
                android:paddingLeft="17dp"
                android:paddingRight="17dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="100dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:background="@mipmap/login_icon_1" />

                    <EditText
                        android:id="@+id/edt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:textColorHint="@color/corlor28"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="17dp"
                    android:background="@color/colorf5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="17dp"
                                android:background="@mipmap/login_icon_3" />

                            <EditText
                                android:inputType="number"
                                android:id="@+id/edt_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="17dp"
                                android:background="@null"
                                android:hint="请输入验证码"
                                android:textColorHint="@color/corlor28"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorWhite" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_getcode"
                        android:layout_width="87dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/shape_corner_read"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="注册"
                        android:textColor="@color/corlor28"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:background="@mipmap/login_icon_6" />

                    <TextView
                        android:id="@+id/tv_passworld_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="密码登录"
                        android:textColor="@color/corlor28"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_upload"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/shape_corner_login"
                    android:gravity="center"
                    android:text="登 录"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_marginTop="13dp"
                    android:gravity="right"
                    android:text="企业入口"
                    android:textColor="@color/corlor28"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="@mipmap/login_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="15dp"
                    android:text="第三方登录"
                    android:textColor="@color/colorf5"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="@mipmap/login_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_weixin"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:background="@mipmap/login_weixin" />

                <ImageView
                    android:id="@+id/iv_qq"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="50dp"
                    android:background="@mipmap/login_qq" />

                <ImageView
                    android:id="@+id/iv_weibo"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="50dp"
                    android:background="@mipmap/login_weibo" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/login_icon_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="我已阅读并同意盛世名录"
                    android:textColor="@color/colorf5"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户协议"
                    android:textColor="@color/colorcf1313"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
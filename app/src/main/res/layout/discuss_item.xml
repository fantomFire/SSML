<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="33dp"
            android:layout_marginLeft="10dp"
            android:layout_height="33dp"
            android:background="@mipmap/meizi"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_user"
            android:textColor="@color/color66"
            android:text="小红花" />
        <LinearLayout
            android:id="@+id/ll_tolike"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            >
            <ImageView
                android:id="@+id/img_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ml_icon_20"

                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/dis_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="15sp"
        android:text="333333333"
        android:layout_marginLeft="50dp"
        android:textColor="@color/text_c28"
        />
</LinearLayout>
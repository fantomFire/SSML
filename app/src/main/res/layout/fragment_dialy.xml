<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="每日一语"
        android:textColor="@color/text_c28"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/divider_gray_e6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableLeft="@mipmap/yiyu_icon_1"
            android:gravity="center_vertical"
            android:text="  每日一语排行榜"
            android:textColor="@color/text_c28"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_gray_e6" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_yiyu_bq"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="5dp"
            android:text="#今日科技"
            android:textColor="@color/colorcf1313"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <zhonghuass.ssml.utils.CircleImageView
                    android:id="@+id/civ_second_icon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:background="@color/colorcf1313" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/yiyu_icon_2" />

                <TextView
                    android:id="@+id/tv_second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小米科技"
                    android:textColor="@color/text_c28"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_second_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="6"
                    android:text="刷新世界纪录"
                    android:textColor="@color/text_c28"
                    android:textSize="9dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <zhonghuass.ssml.utils.CircleImageView
                    android:id="@+id/tv_first_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/colorcf1313" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/yiyu_icon_3" />

                <TextView
                    android:id="@+id/tv_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小米科技"
                    android:textColor="@color/text_c28"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_first_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="6"
                    android:text="刷新世界纪录"
                    android:textColor="@color/text_c28"
                    android:textSize="9dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <zhonghuass.ssml.utils.CircleImageView
                    android:id="@+id/civ_thirdly_icon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:background="@color/colorcf1313" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/yiyu_icon_4" />

                <TextView
                    android:id="@+id/tv_thirdly_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小米科技"
                    android:textColor="@color/text_c28"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_thirdly_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="6"
                    android:text="刷新世界纪录"
                    android:textColor="@color/text_c28"
                    android:textSize="9dp" />


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/divider_gray_e6" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:drawableLeft="@mipmap/yiyu_icon_1"
            android:gravity="center_vertical"
            android:text="  每日一语精选"
            android:textColor="@color/text_c28"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_gray_e6" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_daily"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/sp_12">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
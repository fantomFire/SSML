<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_gray_e6"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_real_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="7dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="如何完成实名认证？"
            android:textColor="@color/text_c28"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:background="@mipmap/cp_ic_go" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_what_everyday"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="什么是每日一语活动？"
            android:textColor="@color/text_c28"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:background="@mipmap/cp_ic_go" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_tel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="如何修改手机号？"
            android:textColor="@color/text_c28"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:background="@mipmap/cp_ic_go" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/divider_gray_e6"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@color/text_c28"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
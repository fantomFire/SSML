<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qdx="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorcf1313">

    <qdx.bezierviewpager_compile.vPage.BezierViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


    <qdx.bezierviewpager_compile.BezierRoundView
        android:id="@+id/bezRound"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_page"
        android:layout_centerHorizontal="true"
        qdx:color_bez="#ffd800"
        qdx:color_stroke="#ffd800"
        qdx:color_touch="#fff"
        qdx:radius="8dp" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:layout_below="@id/bezRound"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_account_info2"
        android:gravity="center"
        android:text="发布"
        android:layout_marginTop="13dp"
        android:textSize="18sp"

        />
</RelativeLayout>
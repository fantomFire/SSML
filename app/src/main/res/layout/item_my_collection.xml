<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginTop="@dimen/dp_10"
              android:padding="15dp"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <zhonghuass.ssml.utils.CircleImageView
                android:id="@+id/civ_photo"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorcf1313"
                    android:textSize="17sp"
                    android:text="美少女"
            />
            <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.15 16:40"
            />
        </LinearLayout>
        <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:background="@mipmap/cp_ic_go"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/divider_gray_e6"
    />
    <zhonghuass.ssml.mvp.ui.ScaleImageView
            android:id="@+id/siv_content"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今天天气不错~"
    />

    <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_concern_1"
            android:text="#今日格言"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/divider_gray_e6"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <TextView
                android:id="@+id/tv_num_reading"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="999"
        />
        <TextView
                android:id="@+id/tv_num_praise"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="999"
        />
        <TextView
                android:id="@+id/tv_num_comment"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="999"
        />
        <TextView
                android:id="@+id/tv_num_forward"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="999"
        />
    </LinearLayout>

</LinearLayout>
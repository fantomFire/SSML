<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_account_info1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <com.github.library.layoutView.CircleImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/meizi" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微博"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:background="@drawable/bg_account_info_text1"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="点击绑定"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_account_info2"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <com.github.library.layoutView.CircleImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/meizi" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微信"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:background="@drawable/bg_account_info_text2"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="点击绑定"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_account_info3"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <com.github.library.layoutView.CircleImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/meizi" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="腾讯QQ"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:background="@drawable/bg_account_info_text3"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="点击绑定"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_account_info4"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <com.github.library.layoutView.CircleImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/meizi" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="153****3335"
            android:textSize="15sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:background="@drawable/bg_account_info_text4"
            android:textColor="@color/colorcf1313"
            android:gravity="center"
            android:text="更换手机号码"
            android:textSize="13sp" />
